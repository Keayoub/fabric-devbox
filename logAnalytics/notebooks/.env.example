# Azure & Fabric Environment Variables
# Copy this file to .env and fill in your actual values
# Fabric Runtime: 1.3

# ================================
# Azure AD App Registration (Required)
# ================================
FABRIC_TENANT_ID=your-tenant-id-here
FABRIC_APP_ID=your-app-id-here
FABRIC_APP_SECRET=your-app-secret-here

# ================================
# Azure Subscription & Resources
# ================================
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=your-resource-group-here

# ================================
# Fabric Workspace Configuration
# ================================
FABRIC_WORKSPACE_ID=your-workspace-id-here
FABRIC_RUNTIME_VERSION=1.3

# ================================
# Log Analytics & Data Collection (Required)
# ================================
LOG_ANALYTICS_WORKSPACE_ID=your-log-analytics-workspace-id-here
DCR_ENDPOINT_HOST=your-dce-endpoint-host-here
DCR_IMMUTABLE_ID=your-dcr-immutable-id-here

# Example values (replace with your actual values):
# LOG_ANALYTICS_WORKSPACE_ID=0f975edc-62f5-4c5e-9c3e-b0562d94fb7d
# DCR_ENDPOINT_HOST=fabric-logs-dce.canadacentral-1.ingest.monitor.azure.com
# DCR_IMMUTABLE_ID=dcr-39df9d8fd1874e118a27c7148bc7a7fb

# ================================
# Key Vault Configuration (Optional)
# ================================
AZURE_KEY_VAULT_URI=https://your-keyvault-name.vault.azure.net/
AZURE_KEY_VAULT_SECRET_NAME=your-service-principal-name 

# ================================
# Collection Configuration (Optional)
# ================================
# Override default collection settings
FABRIC_LOOKBACK_HOURS=24
FABRIC_COLLECT_ACTIVITY_RUNS=true
FABRIC_METRICS_INTERVAL_MINUTES=15
FABRIC_CAPACITY_ID=your-capacity-id-here

# ================================
# Development & Debugging (Optional)
# ================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
